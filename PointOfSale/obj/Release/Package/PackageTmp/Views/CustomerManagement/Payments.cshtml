
@{
    ViewBag.Title = "Payments";
}

<style>
    .swal2-container {
        z-index: 10000000000000;
    }

</style>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox">
            <div class="ibox-heading">
                <div class="ibox-title">
                    <h2><i class="fa fa-cogs">&nbsp; Customer's List</i></h2>
                </div>
            </div>
            <div class="ibox ibox-content">
                <table class="table table-striped table-bordered" id="tblCustomer">
                    <thead>
                        <tr>
                            <th class="hidden">UID</th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Contact</th>
                            <th>Address</th>
                            <th>Balance</th>
                            <th>Status</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tbody"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@*   Model Start  *@


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Customer Recieve</h5>
            </div>
            <div class="modal-body">
                <div class="row hidden">
                    <input id="UID" name="UID" class="form-control" />
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
                            <label>Name :</label>
                            <input id="Name" name="Name" class="form-control" disabled />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
                            <label>Contact :</label>
                            <input id="Contact" name="Contact" class="form-control" disabled />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
                            <label>Balance :</label>
                            <input id="Balance" name="Balance" class="form-control" disabled />
                        </div>
                    </div>
                </div>

                <div class="row">

                    <div class="form-group">
                        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
                            <label>Recieve :</label>
                            <input id="Pay" name="Pay" class="form-control DigitOnly" />
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" id="btnClose" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button id="btnSave" type="button" class="btn btn-success">Save</button>
            </div>
        </div>
    </div>
</div>



@*   Model Start Pay to customer *@


<!-- Modal -->
<div class="modal fade" id="myModalPay" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Pay to Customer</h5>
            </div>
            <div class="modal-body">
                <div class="row hidden">
                    <input id="pUID" name="pUID" class="form-control" />
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
                            <label>Name :</label>
                            <input id="pName" name="pName" class="form-control" disabled />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group">
                        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
                            <label>Contact :</label>
                            <input id="pContact" name="pContact" class="form-control" disabled />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
                            <label>Balance :</label>
                            <input id="pBalance" name="pBalance" class="form-control" disabled />
                        </div>
                    </div>
                </div>

                <div class="row">

                    <div class="form-group">
                        <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
                            <label>Pay :</label>
                            <input id="PayToCustomer" name="PayToCustomer" class="form-control DigitOnly" />
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" id="btnClose" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button id="pbtnSave" type="button" class="btn btn-success">Save</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Assets/PagesJS/CustomerPayments.js"></script>


