@model IEnumerable<PointOfSale.Models.SubCategory>
@{
    ViewBag.Title = "Customer Management";
    int count = 0;
}


<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox">
            <div class="ibox-heading">
                <div class="ibox-title">
                    <h2><i class="fa fa-user"></i>&nbsp; Add/Edit Customers</h2>
                </div>
            </div>
            <div class="ibox ibox-content">
                <form class="form-group frmAddCustomers">
                    <div class="row hidden">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>UID<span style="color:red;">*</span></label>
                                <input type="text" id="UID" class="form-control" name="UID">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Code<span style="color:red;">*</span></label>
                                <input type="text" id="Code" class="form-control" name="Code" disabled>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Name<span style="color:red;">*</span></label>
                                <input type="text" id="Name" placeholder="Enter Name" class="form-control" name="Name">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Contact<span style="color:red;">*</span></label>
                                <input type="text" id="Contact" placeholder="923001234567" class="form-control DigitOnly" maxlength="12" name="Contact" required="required">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" id="Email" placeholder="Email" class="form-control" name="Email">
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Address</label>
                                <input type="text" id="Address" placeholder="Address" class="form-control" name="Address">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Opening Balance<span style="color:red;">*</span><span style="color:red; font-size: 9px;">(If Balance is debit then enter positive value and if credit then enter negative value.)</span></label>
                                <input type="text" id="OpeningBalance" placeholder="50000" class="form-control DigitOnlyBalance" name="OpeningBalance" required="required">
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-3 col-sm-3">
                            <div class="form-group">
                                <label style="margin-top:5px">Status</label>
                                <div class="i-checks">
                                    <label>
                                        <input type="checkbox" class="icheckbox_square-green" id="IsActive" name="IsActive" />
                                        <i></i>
                                        Is Active
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-3 col-sm-3">
                            <div class="form-group">
                                <label style="margin-top:5px">Reseller</label>
                                <div class="i-checks">
                                    <label>
                                        <input type="checkbox" class="icheckbox_square-green" id="IsResaler" name="IsResaler" />
                                        <i></i>
                                        Is Reseller
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    @foreach (var sc in Model)
                    {
                        <div class="col-lg-3 col-md-3 col-sm-3 IsReseller" hidden>
                            <div class="form-group">    
                                <label>@sc.Name (%)</label>
                                <input type="text" id="SC_@sc.Id" placeholder="Enter Discount in %" class="form-control DigitOnlyForPer clear"  name="SubCategoryName" />
                                <input type="hidden" id="SCH_@sc.Id"  class="form-control" value="@sc.Id" name="SubCategoryId" />
                            
                            </div>
                        </div>
                    }

                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <a id="btn-save" name="btn-save" class="btn btn-primary pull-right"><i class="fa fa-save"></i>&nbsp; Save</a>
                            <a id="btn-refresh" name="btn-refresh" class="btn btn-info pull-right" style="margin-right:5px;"><i class="fa fa-refresh"></i>&nbsp; Reset</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h2><i class="fa fa-users"></i>&nbsp; Customer's List </h2>

            </div>
            <div class="ibox ibox-content">

                <table id="tblCustomers" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="hidden">UID</th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Contact No</th>
                            <th>Address</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tblbody"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/Assets/PagesJS/CustomerManagement.js"></script>