
@{
    ViewBag.Title = "SaleDetailView";
}

<div class="row hidden-print " >
    <div class="col-lg-4 col-md-4 col-lg-offset-1 col-md-offset-1">
        <div class="form-group" id="dateFrom">
            <label class="font-normal">From Date<span class="required" style="color:red">*</span></label>
            <div class="input-group date">
                <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" class="form-control" id="dFrom">
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-4">
        <div class="form-group" id="dateTo">
            <label class="font-normal">To Date<span class="required" style="color:red">*</span></label>
            <div class="input-group date">
                <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" class="form-control" id="dTo">
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3">
        <label class="font-normal"></label>
        <div class="form-group">
            <button type="button" id="btn-saleReport" name="btn-saleReport" class="btn btn-success btn-saleReport">Sale Report</button>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <center><h2><label><b>@ViewBag.ClientName</b></label></h2></center>

@*        <img src="../Images/WXPOSNavLogo.png" alt="Point Of Sale Logo" width="120" height="100" class="img-responsive center-block" />*@
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12" style="text-align: center;">
        <h2>Sale Report</h2>
    </div>
</div>
<div class="row">
    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <label id="lblfromDate">From Date:</label>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <label id="fromdate">@*Vendor Name will append here*@</label>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="col-lg-6 col-md-6 col-sm-6 pull-right">
                <label id="PDate">@DateTime.Now.Date.ToString("dd MMM yyyy")</label>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 pull-right" style="text-align: right;">
                <label>Print Date:</label>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="col-lg-6 col-md-6 col-sm-6">
                <label id="lbltoDate">To Date:</label>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <label id="todate">  @*number will append here*@ </label>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="col-lg-6 col-md-6 col-sm-6 pull-right">
                <label id="PTime">@DateTime.Now.ToString("hh:mm:ss tt")</label>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6 pull-right" style="text-align: right;">
                <label>Print Time:</label>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <table class="table  table-bordered table-hover table-striped">
            <thead>
                <tr>
                    <th>Sr#</th>
                    <th>Item</th>
                    <th>Barcode</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Amount</th>
                    <th>Discount</th>
                    <th>Total</th>


                </tr>
            </thead>
            <tbody id="tblbody"></tbody>
        </table>
    </div>
</div>

<div class="form-group hidden-print">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <button type="button" id="btn-print" name="btn-print" class="btn btn-success pull-right" onclick="window.print();" style="margin-bottom: 35px;"><i class="fa fa-print"></i> Print</button>
    </div>
</div>
<script src="~/Assets/PagesJS/SaleReportDetailView.js"></script>

