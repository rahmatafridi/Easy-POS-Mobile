
@{
    ViewBag.Title = "SaleIndex";
}

<div class="row hidden-print ">
    <div class="col-lg-3 col-md-3 col-lg-offset-1 col-md-offset-1">
        <div class="form-group" id="dateFrom">
            <label class="font-normal">From Date<span class="required" style="color:red">*</span></label>
            <div class="input-group date">
                <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" class="form-control" id="dFrom">
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3">
        <div class="form-group" id="dateTo">
            <label class="font-normal">To Date<span class="required" style="color:red">*</span></label>
            <div class="input-group date">
                <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" class="form-control" id="dTo">
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3">
        <div class="form-group" id="category">
            <label class="font-normal">Category<span class="required" style="color:red">*</span></label>
            <div class="input-group date">
                <select class="form-control" id="catgorydd"></select>
            </div>
        </div>
    </div>
    <div class="col-lg-2 col-md-2">
        <label class="font-normal"></label>
        <div class="form-group">
            <button type="button" id="btn-saleReport" name="btn-saleReport" class="btn btn-success btn-saleReport">Sale Report</button>
        </div>
    </div>
</div>
<br />

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox">
            <div class="ibox-heading">
                <div class="ibox-title">
                    <h2><i class="fa fa-cogs">&nbsp;Sale Report</i></h2>
                </div>
            </div>
            <div class="ibox ibox-content">
                <table class="table table-striped table-bordered" id="tblSaleReport">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Barcode</th>
                            <th>Category</th>
                            <th>Quantity</th>
                            
                        </tr>
                    </thead>
                    <tbody id="tbody"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/Assets/PagesJS/SaleReport.js"></script>

