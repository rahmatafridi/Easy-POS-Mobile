
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox">
            <div class="ibox-heading">
                <div class="ibox-title"><h1><i class="fa fa-list"></i>&nbsp; Color</h1></div>
            </div>
            <div class="ibox ibox-content">
                <form class="form-group frmColor">
                    <div class="row hidden">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>UID <span style="color:red;">*</span></label>
                                <input class="form-control" type="text" id="UID" name="UID" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Code <span style="color:red;">*</span></label>
                                <input class="form-control" type="text" id="Code" name="Code" />
                            </div>
                        </div>
                        @*</div>
                            <div class="row">*@
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Name <span style="color:red;">*</span></label>
                                <input class="form-control" type="text" id="Name" name="Name" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Status</label>
                                <div class="i-checks">
                                    <label>
                                        <input class="icheckbox_square-green" type="checkbox" id="IsActive" name="IsActive"   />
                                    </label>
                                    <i></i>
                                    Is Active
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <a id="btn-save" name="btn-save" class="btn btn-primary pull-right"><i class="fa fa-save"></i>&nbsp; Save</a>
                                <a id="btn-refresh" name="btn-refresh" class="btn btn-info pull-right" style="margin-right:5px;"><i class="fa fa-refresh"></i>&nbsp; Reset</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>

    </div>




</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h2><i class="fa fa-list"></i>&nbsp;Color's List </h2>

            </div>
            <div class="ibox ibox-content">

                <table id="tblColor" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="hidden">UID</th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tblbody"></tbody>
                </table>

            </div>
        </div>
    </div>
</div>

<script src="~/Assets/PagesJS/ColorManagement.js"></script>
