
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox">
            <div class="ibox-heading">
                <div class="ibox-title">
                    <h2><i class="fa fa-cogs">&nbsp;Add Daily Expense</i></h2>

                </div>
            </div>
            <div class="ibox ibox-content">
                <form class="form-group frmAddExpense">
                    <div class="row hidden">
                        <div class="col-log-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>UID</label>
                                <input type="text" id="UID" name="UID" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group" id="dateFrom">
                                <label class="font-normal">Date<span class="required" style="color:red">*</span></label>
                                <div class="input-group date">
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span><input type="text" class="form-control" id="Date" name="Date">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <label>Amount <span style="color:red">*</span></label>
                                <input type="text" id="Amount" class="form-control" name="Amount" placeholder="Enter Amount" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="form-group">
                                <label>Comments <span style="color:red">*</span></label>
                                <input type="text" id="Comments" class="form-control" name="Comments" placeholder="Enter Comments" />
                            </div>
                        </div>
                    </div>
                    <div class="row">                        
                        <div class="col-log-12 col-mid-12 col-sm-12">
                            <a id="btn-save" name="btn-save" class="btn btn-primary pull-right"><i class="fa fa-save">&nbsp;Save</i></a>
                            <button type="reset" id="btn-refresh" name="btn-refresh" class="btn btn-info pull-right" style="margin-right:5px;"><i class="fa fa-refresh">&nbsp;Refresh</i></button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h2><i class="fa fa-list"></i>&nbsp;Daily Expenses List </h2>

            </div>
            <div class="ibox ibox-content">

                <table id="tblDailyExp" class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th class="hidden">UID</th>
                            <th>Date</th>
                            <th>Amount</th>
                            <th>Comments</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="tbody"></tbody>
                </table>

            </div>
        </div>
    </div>
</div>

<script src="~/Assets/PagesJS/DailyExpense.js"></script>