
@{
    ViewBag.Title = "Index";
}


<div class="row">
<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="ibox">
        <div class="ibox-heading">
            <div class="ibox-title">                
                <h2><i class="fa fa-users"></i>&nbsp; Add/Edit User</h2>
            </div>
        </div>
        <div class="ibox ibox-content">
            <form class="form-group frmAddUsers">
                <div class="row hidden">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>UID<span style="color:red;">*</span></label>
                            <input type="text" id="UID" class="form-control" name="UID">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Name<span style="color:red;">*</span></label>
                            <input type="text" id="Name" placeholder="Enter Name" class="form-control" name="Name">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>User Name<span style="color:red;">*</span></label>
                            <input type="text" id="UserName" placeholder="Enter User Name" class="form-control" name="UserName">
                        </div>
                    </div>      
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Password<span style="color:red;">*</span></label>
                            <input type="password" id="Password" placeholder="Password" class="form-control" name="Password" required="required">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" id="Email" placeholder="Email" class="form-control" name="Email">
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>Contact #<span style="color:red">*</span></label>
                            <input type="text" id="ContactNo" placeholder="Contact No" class="form-control" maxlength="12" name="ContactNo">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" id="Address" placeholder="Address" class="form-control" name="Address">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="form-group">
                            <label>User Type<span style="color:red">*</span></label>
                            <select class="form-control chzn" id="UserTypeId" required="required" name="UserTypeId"></select>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-6 col-sm-6">
                        <div class="form-group">
                            <label style="margin-top:5px">Status</label>
                            <div class="i-checks">
                                <label>
                                    <input type="checkbox" class="icheckbox_square-green" id="IsActive" name="IsActive" />
                                    <i></i>
                                    Is Active
                                </label>

                            </div>

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <a id="btn-save" name="btn-save" class="btn btn-primary pull-right"><i class="fa fa-save"></i>&nbsp; Save</a>
                        <a id="btn-refresh" name="btn-refresh" class="btn btn-info pull-right" style="margin-right:5px;"><i class="fa fa-refresh"></i>&nbsp; Reset</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
   </div>
</div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h2><i class="fa fa-users"></i>&nbsp;User's List </h2>
                        
                    </div>
                    <div class="ibox ibox-content">
                        
                            <table id="tblUsers" class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th class="hidden">UID</th>
                                        <th>Name</th>
                                        <th>User Name</th>
                                        <th>Email</th>
                                        <th>Contact No</th>                                    
                                        <th>User Type</th>
                                        <th>Status</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody id="tblbody"></tbody>
                            </table>
                        
                    </div>
                </div>
            </div>
        </div>
    


<script src="~/Assets/PagesJS/User.js"></script>